<% include ../partials/header %>



  <h1 class="text-center">Add New Campground</h1>
  <div class="row">    
    <div class="col-sm-10 col-md-6 col-lg-4 form-style">
      <form action="/campgrounds" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" placeholder="Name" name="name">
        </div>
        <div class="form-group">
          <input class="form-control" type="number" placeholder="Price" name="price" min="0.01" step="0.01">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" placeholder="Image URL" name="image">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" placeholder="Description" name="description">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="location" placeholder="Choose a Location">
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Submit</button>
        </div>
      </form>
      <a href="/campgrounds">Back To Campgrounds</a>
    </div>  

  </div>



<% include ../partials/footer %>